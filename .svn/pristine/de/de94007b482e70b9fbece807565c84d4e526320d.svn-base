#main{
    text-align: center;
    position: relative;
    top: 250px;
}
#main input:not([name=submit]){
    width:250px;
    height: 25px;
    line-height: 25px;
    background: #000000;
    border: 1px solid #d2d2d2;
    color: #fff;
    font-size: 18px;
    font-family: Tahoma;
    padding: 12px;
    border-radius: 7px;
    margin-right: 10px;
}
#main input[name=submit]{
    width: 150px;
    height: 50px;
    position: relative;
    top: -4px;
    font-family:黑体;
    color: #fff;
    font-size: 24px;
    background: limegreen;
    border:none;
}
#main .reg_fg{
    margin:0 auto;
    width:380px;
    text-align: right;
    padding: 10px;
    font-size: 14px;
    color: #eee;
    text-shadow: 1px 1px 1px #333;
}
#main .reg_fg a{
    color: #eee;
    text-decoration: none;
    text-shadow: 1px 1px 1px #333;
}
#main .reg_fg a:hover{
    text-decoration: underline;
}
#register form ol.register_error{
    margin:0;
    padding: 0 0 0 20px;
    color: red;
    font-size: 14px;
}
#register form ol.register_error li{
    height: 20px;
}
#register input.text{
    width: 270px;
    height: 25px;
    padding: 5px;
    border:1px solid #ccc;
    border-redius:3px;
    background: #fff;
}
#register span.star{
    color: red;
}
#register span.succ{
    width: 28px;
    height: 20px;
    display: inline-block;
    background: url("../img/success_tag.jpg") no-repeat bottom;
}
#loading{
    background: url(../img/loading.gif) no-repeat 20px center;
    line-height: 22px;
    font-size: 14px;
    font-weight: bold;
    text-indent: 40px;
    color: #666;
}
#check_code{
    padding: 0 0 0 20px;
    position:relative;
    top:15px;
}
#check_code input[type="text"]{
    width: 85px;
    height:25px;
    padding:5px;
    border-radius: 3px;
    border:1px solid #ccc;
    background: #fff;
    color: #333;
}
#check_code a{
    color: #036;
    text-decoration:none;
    font-size:16px;
}
#check_code a:hover{
    text-decoration: none;
}
#footer{
    height: 40px;
    margin:0 auto;
    position:absolute;
    bottom:0;
    color: #eee;
    font-size: 13px;
    text-align: center;
    background: #000000;
    width:100%;
    filter: alpha(opacity=40);
    -moz-opacity: 0.4;
    opacity: 0.4;
}
.footer-text{
    position: absolute;
    bottom: 0;
    color: #ddd;
    font-size: 13px;
    text-align: center;
    width: 100%;

}